<h1>Editing user</h1>


 <div class="row">
    <div class="span6 offset3">
<%= form_for (@user) do |f| %>
  <% if @user.errors.any? %>
      <p>Form is invalid</p>
     
        <% @user.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      
  <% end %>


    <%= f.label :first %>
    <%= f.text_field :first%>



    <%= f.label :last %>
    <%= f.text_field :last %>

    <%= f.label :email %>
    <%= f.text_field :email %>
    
      <%= f.label :admin %>
    <%= f.check_box :admin %></br>

    <%= f.label :password %>
    <%= f.password_field :password %>
  
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
 
  
  

  <%= f.submit "Update", class: "btn btn-large btn-primary" %>
<% end %>


<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
</div>
</div>